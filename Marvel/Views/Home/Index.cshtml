@model Marvel.Models.Index

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Marvel Comics & Creators </h1>
    <p class="lead">Access info about your favorite Comics and Comic Creators here, thanks to the Marvel Developer API.</p>
    <p>
        <a href="http://developer.marvel.com" class="btn btn-primary btn-lg">Learn more about the API &raquo;</a>
    </p>
</div>



<div class="panel panel-default">
    <div class="panel-heading search-heading">
        <div class="row panel-title">
            <div class="col-sm-9 col-search">
                <h3>Recent Comics</h3>
            </div>
            <div class="col-sm-3 col-md-3 pull-right col-search">
                @using (Ajax.BeginForm("Search", "Comics", null, new AjaxOptions { UpdateTargetId = "comicResults" }, new { @class = "navbar-form", role = "search" }))
                {
                    string search_term = "";
                    <div class="input-group">
                        @Html.TextBoxFor(x => search_term, new { @class="form-control", placeholder="Search", name="search_term",id="search_term" })
                         <div class="input-group-btn">
                            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                        </div>
                    </div>
                  }
            </div>
        </div>
    </div>
    <div class="panel-body container-fluid">
        <div id="comicResults">
            @(Html.Action("Comics", "Comics", new { order = "-focDate", limit = 4, offset = 0 }))
        </div>
    </div>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Active Creators</h3>
    </div>
    <div class="panel-body container-fluid">
        @(Html.Action("Creators", "Creators", new { order = "-modified", limit = 4, offset = 0 }))
    </div>
</div>

